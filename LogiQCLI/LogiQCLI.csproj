<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- CLI Tool Configuration -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>logiq</ToolCommandName>
    <PackageId>LogiQCLI</PackageId>
    <Version>1.0.0</Version>
    <Authors>LogiQ Team</Authors>
    <Description>LogiQ CLI - Your AI-Powered Code Assistant</Description>
    <PackageProjectUrl>https://github.com/xyOz-dev/LogiQCLI</PackageProjectUrl>
    <RepositoryUrl>https://github.com/xyOz-dev/LogiQCLI</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.50.0" />
    <PackageReference Include="Octokit" Version="13.0.1" />
  </ItemGroup>

</Project>
